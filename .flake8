[flake8]
max-line-length = 88
ignore = E501, E203, W503, ANN101, ANN102
mypy-init-return = True
per-file-ignores =
    __init__.py:F401
    tests/test_*:ANN201
    tests/**/test_*:ANN201
exclude =
    .git
    __pycache__
    build
    dist
    .venv
    .tox
    .pytest_cache
    .github
    poetry/core/_vendor/*
    tests/fixtures/*
    tests/**/fixtures/*
