[flake8]
min_python_version = 3.7.0
max-line-length = 88
ignore = E501, E203, W503, ANN101, ANN102, SIM106
ban-relative-imports = True
mypy-init-return = True
format-greedy = 1
per-file-ignores =
    __init__.py:F401
    tests/test_*:ANN201
    tests/**/test_*:ANN201
exclude =
    .git
    __pycache__
    build
    dist
    .venv
    .tox
    .pytest_cache
    .github
    src/poetry/core/_vendor/*
    tests/fixtures/*
    tests/**/fixtures/*
